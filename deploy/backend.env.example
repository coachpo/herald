# Backend (Django) runtime configuration.
# Copy to `deploy/backend.env` and fill values.

DJANGO_DEBUG=false
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_SECRET_KEY=change-me

# Used in verification email links.
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Auth/token settings.
JWT_SIGNING_KEY=change-me
TOKEN_HASH_KEY=

# Feature flags.
ALLOW_USER_SIGNUP=true

# Channel config encryption.
CHANNEL_CONFIG_ENCRYPTION_KEY=

# Optional mail settings.
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=true
DEFAULT_FROM_EMAIL=no-reply@localhost
